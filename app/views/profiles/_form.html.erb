<%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
  
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :job_title %>
        <%= f.text_field :job_title, class: "form-control" %>
      </div>
    </div>
  
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :company %>
        <%= f.text_field :company, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number, class: "form-control" %>
      </div>
    </div>
  
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :contact_email %>
        <%= f.email_field :contact_email, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :about %>
    <%= f.text_area :about, class: "form-control", size: "50x10" %>
  </div>
  
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Update Profile", class: "btn btn-success" %>
  </div>
  
<% end %>