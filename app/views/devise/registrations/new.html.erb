<div class="container">
  <div class="row">
    <% if params[:plan] == '2' %>
      <h2 class="text-center">Pro Account Registration</h2>
    <% else %>
      <h2 class="text-center">Basic Account Registration</h2>
    <% end %>
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        
        <% if params[:plan] == '2' %>
          <%= render 'pro_form' %>
        <% else %>
          <%= render 'basic_form' %>
        <% end %>
  
      </div>
    </div>
  </div>
</div>


